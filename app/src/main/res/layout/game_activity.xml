<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layoutDirection="ltr"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_score"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"

            android:fontFamily="@font/cherry_cream_soda"
            android:text="Score:"
            android:textColor="#E7CE04"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textview_timer"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/cherry_cream_soda"
            android:text="10"
            android:textColor="#E7CE04"
            android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_life1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stormtrooper_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_life2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stormtrooper_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_life3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stormtrooper_icon"
                android:visibility="visible" />



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textview_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:fontFamily="@font/cherry_cream_soda"
            android:gravity="center"
            android:text="Question"
            android:textColor="#E7CE04"
            android:textSize="28dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg_menu"
                android:fontFamily="@font/cherry_cream_soda"
                android:text="1"
                android:textColor="#E7CE04" />

            <Button
                android:id="@+id/btn_answer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg_menu"

                android:fontFamily="@font/cherry_cream_soda"
                android:text="2"
                android:textColor="#E7CE04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg_menu"
                android:fontFamily="@font/cherry_cream_soda"
                android:text="3"

                android:textColor="#E7CE04" />

            <Button
                android:id="@+id/btn_answer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg_menu"
                android:fontFamily="@font/cherry_cream_soda"
                android:text="4"

                android:textColor="#E7CE04" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
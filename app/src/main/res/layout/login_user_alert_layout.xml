<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F6000000"
    android:gravity="bottom"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="LOGIN USER"
    android:gravity="center"
    android:fontFamily="@font/cherry_cream_soda"
    android:padding="8dp"
    android:textColor="#ECD20E"
    android:textStyle="bold"
    android:textSize="40sp"
    />

<EditText
    android:layout_width="150dp"
    android:layout_gravity="center"
    android:cursorVisible="true"
    android:textDirection="ltr"
    android:layoutDirection="ltr"
    android:singleLine="true"
    android:layout_height="40dp"
    android:layout_margin="16dp"
    android:background="@drawable/custom_edit_text"
    android:id="@+id/edit_text_userName_login"
    />


    <Spinner

        android:id="@+id/spinner_login"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        android:hint="enter user"
        android:textColor="#E7DB09"
        android:layout_gravity="center"
        android:background="@drawable/my_button_bg_menu"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="0dp"
        android:textAlignment="center"


        />
<Button
    android:layout_width="120dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:text="Confirm"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="#E7DB09"
    android:id="@+id/login_button_confirm"
    android:background="@drawable/my_button_bg_menu"
    android:layout_marginTop="15dp"
    />


</LinearLayout>
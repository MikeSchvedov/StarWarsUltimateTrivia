


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/background"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/starwars"
            android:gravity="center"

            android:paddingBottom="5dp"
            android:text="@string/main_title"
            android:textColor="#E7CE04"
            android:textSize="70sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ultimate Trivia"
            android:textColor="#E7CE04"
            android:textSize="50sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="#E7CE04"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/my_button_bg_menu"
            android:fontFamily="@font/cherry_cream_soda"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_myProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Progress"
            android:layout_margin="10dp"
            android:textColor="#E7CE04"
            android:textSize="20sp"
            android:background="@drawable/my_button_bg_menu"
            android:fontFamily="@font/cherry_cream_soda"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#E7CE04"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/my_button_bg_menu"
            android:fontFamily="@font/cherry_cream_soda"
            android:layout_weight="1"/>


    </LinearLayout>




</LinearLayout>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/starwars"
            android:gravity="center"
            android:text="Game over"
            android:textColor="#E7CE04"
            android:textSize="55sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/starwars"
            android:text="Your Score:"
            android:textColor="#E7CE04"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/starwars"
            android:text="0"
            android:id="@+id/textview_scoreCounter"
            android:textColor="#E7CE04"
            android:textSize="50sp" />

    </LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:fontFamily="@font/starwars"
        android:gravity="center"
        android:id="@+id/textview_newHighScore"
        android:text="New High Score!"
        android:textColor="#18B4C9"
        android:textSize="35sp" />


    <Button
        android:layout_width="match_parent"
        android:id="@+id/btn_backToMainMenu"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="30dp"
        android:background="@drawable/my_button_bg_menu"
        android:text="Return to Main Menu"
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#E7CE04"
        android:textSize="20sp"
        android:layout_marginTop="40dp"/>



    </LinearLayout>




    </LinearLayout>
